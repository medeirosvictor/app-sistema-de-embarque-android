            android:name=".GPSDemo"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeituraDeCartao"
            android:exported="false" />
        <activity
            android:name=".RelatorioDoDia"
            android:exported="false" />
        <activity
            android:name=".MapaDaRota"
            android:exported="true" />
        <activity
            android:name=".ListaDePassageiros"
            android:exported="false" />
